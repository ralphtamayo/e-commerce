{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col-md-12 r-panel">
			<div class="r-panel-header p-sm">
				<h2>Product list</h2>
			</div>

			<div class="r-panel-body container-fluid">
				<ul class="row product-list m-t-md">
					{% for product in products %}
						<div class="col-xs-2 col-md-3">
							<div class="product">
								<h5 class="p-sm">
								{% if is_granted('ROLE_ADMIN') %}
									<a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.name }}</a>
								{% else %}
									{{ product.name }}
								{% endif %}
								</h5>
								<hr>
								<div class="product-details p-sm">
									<p class="product-description">{{ product.description }}</p>
									<h6 class="m-t-sm m-b-sm">Price: {{ product.price }}</h6>
									<div class="product-action p-t-md">
										{{ form_start(form, {'action': path('cart_add_item', {'id': product.id}), 'method': 'POST'}, { 'attr' : { 'class': 'form-inline' } }) }}
											{{ form_row(form.quantity, {'attr': {'class': 'form-control', 'placeholder': 'Quantity'}}) }}
											<button type="submit" class="btn btn-primary m-t-sm" data-toggle="modal">Add to cart</button>
										{{ form_end(form) }}
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</ul>
				{% if is_granted('ROLE_ADMIN') %}
					<a class="btn btn-primary" href="{{ path('product_new') }}">Create a new product</a>
				{% endif %}
			</div>
		</div>
	</div>

	<div class="modal fade" id="success" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Success</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					Product added to cart...
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
