{% extends 'base.html.twig' %}

{% block title %}Flowershop / Inventory{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-6 mx-auto r-panel">
			<div class="p-md text-center">
				<h2>Inventories</h2>
			</div>

			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Product Name</th>
						<th scope="col">Quantity</th>
						<th scope="col" class="text-right">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for inventory in inventories %}
						<tr>
							<td>{{ inventory.product.name }}</td>
							<td>{{ inventory.quantity }}</td>
							{% if is_granted('ROLE_ADMIN') %}
								<td class="text-right">
									<a class="btn btn-secondary" href="{{ path('inventory_new', { 'id': inventory.product.id }) }}">Add Stock</a>
								</td>
							{% endif %}
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
	
{% endblock %}
