<h3>Payment Details: </h3>
<p><strong>Payment Mode: </strong>{{ payment.paymentMode }}</p>
{% if payment.paymentMode == 'BDO' %}
	<p><strong>Card Number: </strong>{{ payment.cardNumber }}</p>
	<p><strong>Expiration: </strong>{{ payment.expirationMonth }}/{{ payment.expirationYear }}</p>
{% elseif payment.paymentMode == 'Cebuana' %}
	<p><strong>Reference Number: </strong>{{ payment.referenceNumber }}</p>
{% endif %}
<table border="1" class="table table-striped">
	<thead>
		<tr>
			<th>Product</th>
			<th>Quantity</th>
			<th>Price</th>
			<th>Total</th>
		</tr>
	</thead>
	<tbody>
		{% for item in cart.items %}
			<tr>
				<td>{{ item.product.name }}</td>
				<td>{{ item.quantity }}</td>
				<td>{{ item.product.price | number_format(2) }}</td>
				<td>{{ (item.quantity * item.product.price) | number_format(2) }}</td>
			</tr>
		{% endfor %}
	</tbody>
</table>

<p><strong>Total: </strong>{{ payment.total | number_format(2) }}</p>